{
  "env": {
    "es6": true,
    "jest": true
  },
  "plugins": [],
  "rules": {
    "no-console": 0,
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-multi-spaces": 0,
    "newline-per-chained-call": 1,
    "yoda": [
      "off",
      "always"
    ],
    "radix": [
      "error",
      "as-needed"
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "no-restricted-syntax": "off",
    "class-methods-use-this": "off",
    "default-case": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off"
  },
  "extends": "airbnb/base"
}
